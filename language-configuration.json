{
  "comments": {
    "lineComment": ";",
    "blockComment": ["comment", "end comment"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "onEnterRules": [
    {
      "beforeText": "^\\d{4}[/-]\\d{2}[/-]\\d{2}.*$",
      "action": { 
        "indent": "none",
        "appendText": " "
      }
    }
  ]
}
