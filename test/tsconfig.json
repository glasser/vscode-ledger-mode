{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*", "../src/**/*"],
  "exclude": ["node_modules"]
}